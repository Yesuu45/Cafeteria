<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.poo.cafeteria.controller.EstudianteController"
            prefHeight="400.0" prefWidth="600.0">

    <children>
        <VBox spacing="15" alignment="TOP_CENTER" prefWidth="600">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Título -->
            <Label text="Gestión de Estudiantes" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <!-- Formulario -->
            <GridPane hgap="10" vgap="10" alignment="CENTER">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT"/>
                    <ColumnConstraints halignment="LEFT"/>
                </columnConstraints>

                <!-- Nombre -->
                <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtNombre" promptText="Ingrese el nombre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <!-- Cédula -->
                <Label text="Cédula:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtCedula" promptText="Ingrese la cédula" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <!-- Teléfono -->
                <Label text="Teléfono:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtTelefono" promptText="Ingrese el teléfono" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <!-- Carrera -->
                <Label text="Carrera:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cmbCarrera" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </GridPane>

            <!-- Botones -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="Agregar" onAction="#agregarEstudiante"/>
                <Button text="Eliminar" onAction="#eliminarEstudiante"/>
                <Button text="Buscar" onAction="#buscarEstudiante"/>
                <Button text="Limpiar" onAction="#limpiarCampos"/>
            </HBox>

            <!-- Tabla -->
            <TableView fx:id="tablaEstudiantes" prefHeight="200" prefWidth="550">
                <columns>
                    <TableColumn text="Nombre" fx:id="colNombre"/>
                    <TableColumn text="Cédula" fx:id="colCedula"/>
                    <TableColumn text="Teléfono" fx:id="colTelefono"/>
                    <TableColumn text="Carrera" fx:id="colCarrera"/>
                </columns>
            </TableView>
        </VBox>
    </children>
</AnchorPane>
